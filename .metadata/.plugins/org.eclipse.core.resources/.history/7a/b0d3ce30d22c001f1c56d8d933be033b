package application;

import java.text.ParseException;
import java.text.SimpleDateFormat;

import entities.Comment;
import entities.Post;

public class Program2 {

	public static void main(String[] args) throws ParseException {
		
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy HH:mm:ss");
		
		// POST 1
		Post post1 = new Post(sdf.parse("17/06/2024 14:30:25"), 
				"Estudando Java", 
				"Continuando a aprender sobre composição de classes em Java!", 
				12);
		
		Comment c1 = new Comment("Parabéns pelo esforço, Bruno!");
		Comment c2 = new Comment("Que legal, Java é tudo de bom kkkkk");
		
		post1.addComment(c1);
		post1.addComment(c2);
	
	}

}
